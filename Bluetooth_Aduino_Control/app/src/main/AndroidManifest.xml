<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quyetluu.bluetooth_aduino_control">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name="com.example.quyetluu.bluetooth_aduino_control.DeviceList"
            android:label="@string/app_name">

        </activity>

        <activity
            android:name="com.example.quyetluu.bluetooth_aduino_control.ledControl"
            android:label="LED Control">

        </activity>
        <activity
            android:name="com.example.quyetluu.bluetooth_aduino_control.AboutActivity"
            android:label="@string/title_activity_about">
        </activity>
    </application>

</manifest>